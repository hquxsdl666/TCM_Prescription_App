# 中药处方识别整理软件 - Kivy样式文件

<Button>:
    font_size: '16sp'
    background_normal: ''
    background_color: (0.3, 0.7, 0.5, 1)
    color: (1, 1, 1, 1)
    border_radius: [10]

<TextInput>:
    font_size: '14sp'
    padding: [10, 10]
    background_color: (0.95, 0.95, 0.95, 1)
    foreground_color: (0.2, 0.2, 0.2, 1)
    cursor_color: (0.3, 0.7, 0.5, 1)

<Label>:
    font_size: '14sp'
    color: (0.2, 0.2, 0.2, 1)

<HomeScreen>:
    canvas.before:
        Color:
            rgba: (0.95, 0.97, 0.95, 1)
